<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>

	<!-- 메인 -->
	<definition name="main" extends="basic_layout">
		<put-attribute name="body" value="/WEB-INF/jsp/main/main.jsp" />
	</definition>
	
	<!-- 메인 외 기타 페이지 -->
	<definition name="character/*" extends="basic_layout">
		<put-attribute name="body" value="/WEB-INF/jsp/character/{1}.jsp" />
	</definition>
	
	<definition name="character/*/*" extends="basic_layout">
		<put-attribute name="body" value="/WEB-INF/jsp/character/{1}/{2}.jsp" />
	</definition>
	
	
	
</tiles-definitions>